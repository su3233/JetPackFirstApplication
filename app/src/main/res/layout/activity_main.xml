<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity">

    <TextView
        android:id="@+id/tv_main_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickHappen"
        android:text="Hello World!"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_main_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="add"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/bt_main_minus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_main_show" />

    <Button
        android:id="@+id/bt_main_minus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="minus"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bt_main_add"
        app:layout_constraintTop_toBottomOf="@id/tv_main_show" />

</androidx.constraintlayout.widget.ConstraintLayout>